{{question.topic }} question by {{question.author}} -- <strong>{{question.query}}</strong>
<br>
<p><img src={{question.image}} alt={{question.topic}}></p>


<h2> Answers </h2>
<ul>
  {{#each question.answers as |answer|}}
    {{answer-tile answer=answer destroyAnswer="destroyAnswer"}}
  {{/each}}
</ul>

<button {{action 'delete' question}}>Delete</button>
