{{#if updateQuestionForm}}
  <h4>Update {{question.author}}'s {{question.topic}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="question">Question</label>
        {{input id="question" value=question.query}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input id="author" value=question.author}}
      </div>

      <div class="form-group">
        <label for="topic">Topic</label>
        {{input id="topic" value=question.topic}}
      </div>

      <div class="form-group">
        <label for="notes">Additional Notes</label>
        {{input id="notes" value=question.notes}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input id="image" value=question.image}}
      </div>

      <button {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
